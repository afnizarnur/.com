<!DOCTYPE html>
<html lang="{{ meta.lang }}">
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>
            {% if title %}{{ title }}
            {% else %}
                {{ meta.title }}
            {% endif %}
        </title>
        <link
            rel="preload"
            href="{{ '/assets/fonts/Mona-Sans.woff2' | url }}"
            as="font"
            type="font/woff2"
            crossorigin
/>
        <link
            rel="preload"
            href="{{ '/assets/fonts/Inter-roman.var.woff2' | url }}"
            as="font"
            type="font/woff2"
            crossorigin
/>
        <link rel="stylesheet" href="{{ '/assets/styles/themes.css' | url }}"/>
        <link rel="stylesheet" href="{{ '/assets/styles/main.css' | url }}"/>
        {% include "meta.njk" %}

        <script>
            {% include "initialtheme.njk" %}
        </script>
    </head>
    <body>
        {% iconsprite %}
        <a href="#main" class="sr-skip-link">Skip to main content</a>

        <div class="layout" role="document">
            <main id="main" class="main" tabindex="-1">
                {{ content | safe }}
            </main>
        </div>

        <svg alt="" class="cursor" width="80" height="80" viewbox="0 0 80 80">
            <circle class="cursor__inner" cx="40" cy="40" r="20"/>
        </svg>
        <script
            type="text/javascript"
            src="{{ '/assets/scripts/main.js' | url }}"
        ></script>
        <script type="text/javascript">
            if ("serviceWorker" in navigator) {
                navigator
                    .serviceWorker
                    .register("/serviceworker.js")
            }
        </script>
    </body>
</html>