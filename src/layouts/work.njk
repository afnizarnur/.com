---
layout: base
---
<div class="container work">
    <r-grid columns="12" columns-s="4">
        {% include "header.njk" %}
        {% include "work/header.njk" %}

        <r-cell
            class="border-left-bottom work--title-intro"
            span="1-2"
            span-s="row"
            span-lg="row"
        >
            <div class="border-bottom work--section-title">
                <small>Content</small>
            </div>
        </r-cell>

        <r-cell
            class="border-left-right-bottom content"
            span="3-12"
            span-s="row"
            span-lg="row"
        >
            <span class="block border-bottom u-desktop-only"></span>
            <div class="content--content">
                {{ content | safe }}
            </div>
        </r-cell>

        {% include "footer.njk" %}

    </r-grid>
</div>