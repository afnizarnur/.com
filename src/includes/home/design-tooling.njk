<r-cell
    class="border-left-bottom work--title-intro"
    span="1-2"
    span-s="row"
    span-md="row"
>
    <div class="border-bottom work--section-title">
        <small>Design Tooling</small>
    </div>
</r-cell>

<r-cell
    class="border-left-right-bottom design-tooling"
    span="3-12"
    span-s="row"
    span-md="row"
>
    <span class="block border-bottom u-desktop-only"></span>
    <div class="design-tooling--content">
        <div class="title">
            <h2>Design Tooling</h2>

            <p class="subtitle">
                I have a curiousity to learn how to code and I strive to assist
                my design team by constructing valuable utilities such as web
                applications, Sketch plugins, and Figma plugins that enhance our
                workflow.
            </p>
        </div>

        <r-grid columns="10" class="design-tooling--list-wrapper">
            {% for item in designTooling %}
            <r-cell span="5" span-s="row" class="design-tooling-card">
                <div class="thumbnail-wrapper">
                    {% if item.url %}
                    <a href="{{ item.url }}">
                        <img
                            class="thumbnail"
                            src="{{ item.thumbnail | url }}"
                            alt="Thumbnail of {{ item.title }}"
                        />
                    </a>
                    {% else %}
                    <img
                        class="thumbnail"
                        src="{{ item.thumbnail | url }}"
                        alt="Thumbnail of {{ item.title }}"
                    />
                    {% endif %}
                </div>

                <div class="tool-title">
                    <p class="body-large">
                        {% if item.url %}
                        <a href="{{ item.url }}">{{ item.title }}</a>
                        {% else %}
                        {{ item.title }}
                        {% endif %}
                    </p>
                    <p class="description">
                        {{ item.description }}
                    </p>
                    <ul>
                        {% for i in item.tags %}
                        <li>
                            <small class="badge helper">{{ i }}</small>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </r-cell>
            {% endfor %}
        </r-grid>
    </div>
</r-cell>
