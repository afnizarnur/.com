<r-cell class="recommendation" span="2-11" span-s="row" span-lg="row">
	<div class="recommendation--content">
		<div class="title">
			<h2>Read what they say</h2>
		</div>

		<div class="recommendation--accordion">

			<div class="accordion-wrapper {% if recommendation.length > 4 %}hidden{% endif %}">
				<div class="accordion-inner">
					{% for items in recommendation %}
						<div class="accordion-slide">
							<blockquote>{{ items.content | nl2br | safe }}</blockquote>
							<cite>
								{% if items.image %}
									{% image 'recommendation/'+items.image, items.name, "(min-width: 1440px) 100vw, 50vw", 40, 40  %}
								{% endif %}

								<div>
									<p class="bold">
										{{ items.name }}
									</p>
									<small>
										{{ items.role }}

										{% if items.company %}
                                         at {{ items.company }}
										{% endif %}
									</small>
								</div>
							</cite>
						</div>
					{% endfor %}
				</div>
			</div>
			{% if recommendation.length > 4 %}
				<div class="show-more">
					<span tabindex="0" data-umami-event="recommendation-view-all" class="show-more-link">
                        View all word by friends, colleagues, and clients{% icon "chevron-down" %}
					</span>
				</div>
			{% endif %}

		</div>

	</div>
</r-cell>