<header class="header b-b" role="banner">
    <div class="container">
        <r-grid columns="12" columns-s="4">
            <r-cell
                class="work--header-container"
                span="2-11"
                span-s="row"
                span-lg="row"
            >
                <div class="header--inner">
                    <div class="header--branding">
                        <p class="body-large">
                            <a class="logo" href="{{ '/' | url }}">
                                <img src="{{ '/assets/images/afnizar-nur-ghifari.png' | url }}" alt="Afnizar Nur Ghifari" height="36" width="36" decoding="async"/>
                            </a>
                        </p>
                    </div>
                    <div class="header--nav">{% include "nav.njk" %}</div>
                </div>
            </r-cell>
        </r-grid>
    </div>
</header>

