<header class="header b-b" role="banner">
    <div class="container">
        <r-grid columns="12" columns-s="4">
            <r-cell
                class="work--header-container"
                span="2-11"
                span-s="row"
                span-lg="row"
            >
                <div class="header--inner">
                    <div class="header--branding">
                        <p class="body-large">
                            <a class="logo" href="{{ '/' | url }}">
                                {% image 'afnizar-nur-ghifari.png', "Afnizar Nur Ghifari", "(min-width: 1440px) 100vw, 50vw", 36, 36  %}
                            </a>
                        </p>
                    </div>
                    <div class="header--nav">{% include "nav.njk" %}</div>
                </div>
            </r-cell>
        </r-grid>
    </div>
</header>

