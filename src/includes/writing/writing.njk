<r-cell
    class="writing--container"
    span="2-11"
    span-s="row"
    span-lg="row"
>
    <div class="writing--content">
        <div class="title">
            <h1>Writing</h1>
            <p class="subtitle">Sharing things related to design, development, career, and personal</p>
        </div>

        <r-grid columns="10" class="writing--article-list">
            {% for article in collections.writing %}
                <r-cell span="5" span-s="row"class="article-card">
                    <div class="article-header">
                        <div class="article-date">
                            <p>
                                {{ article.date | dateToFormat('d') }}
                            </p>
                            <small class="helper">
                                {{ article.date | dateToFormat('MMM') }}
                            </small>
                        </div>

                        <div class="article-title">
                            <a href="{{ article.url }}">
                                <h5>

                                    {{ article.data.title }}
                                </h5>
                            </a>
                            <p class="description">{{ article.data.description }}</p>
                        </div>
                    </div>

                    <ul>
                        {% for i in article.data.tags %}
                            <li>
                                <a href="{{ '/writing/tags/' + i | url }}">
                                    <small class="badge badge-tags helper">{{ i }}</small>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </r-cell>
            {% endfor %}

            <r-cell span="5" span-s="row"class="article-card">
                <div class="article-header">
                    <div class="article-date">
                        <p>
                            17
                        </p>
                        <small class="helper">
                            Dec
                        </small>
                    </div>

                    <div class="article-title">
                        <a href="{{ item.article.url }}">
                            <h5>
                                Codegen plugins (and other tips) for automating design to code
                        </h5>
                        </a>
                        <p class="description">It's time to launch my personal website, again and it's always a work in progress.</p>
                    </div>
                </div>

                <ul>
                    {% for i in item.data.tags %}
                        <li>
                            <a href="{{ '/writing/tags/' + i | url }}">
                                <small class="badge badge-tags helper">{{ i }}</small>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </r-cell>

        </r-grid>
    </div
</r-cell>