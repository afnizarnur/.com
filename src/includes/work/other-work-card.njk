{% set otherworks = collections.works | excludePost(page) | slice(-2) %}

{% for item in otherworks | reverse %}
    <r-cell span="5" span-s="row" class="other-work-card">
        <div class="thumbnail-wrapper">
            <a href="{{ item.url | url }}">
                {% image "work/" + item.data.thumbnail, "Thumbnail of " + item.data.title,
                    "(max-width: 480px) 100vw, (max-width: 768px) 90vw, 1280px",
                    421, 304 %}
            </a>
        </div>
        <r-grid columns="10" class="description">
            <r-cell span="row">
                <p class="body-large">
                    <a href="{{ item.url | url }}">{{ item.data.title }}</a>
                </p>
            </r-cell>
            <r-cell span="row">
                <p class="description--project">{{item.data.description}}</p>
                <ul>
                    {% for i in item.data.tags %}
                        <li>
                            <small class="badge helper">{{ i }}</small>
                        </li>
                    {% endfor %}
                </ul>
            </r-cell>
        </r-grid>
    </r-cell>
{% endfor %}