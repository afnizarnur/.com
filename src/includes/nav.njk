<nav class="nav" role="navigation" tabindex="-1">
    <button
        class="nav__toggle js-nav-toggle"
        aria-expanded="false"
        aria-controls="nav-menu"
    >
        <span class="sr-only">Toggle Menu</span>
        <span class="menuicon">
            <span class="menuicon__bar"></span>
            <span class="menuicon__bar"></span>
            <span class="menuicon__bar"></span>
        </span>
    </button>

    <ul class="nav__menu">
        {%- for item in collections.all | eleventyNavigation -%}
            {%- if item.url
        -%}
                {%- set isCurrent = (item.url == page.url) -%}
                {%- set isParent =
        item.url != '/' and item.url in page.url -%}
                <li
            class="nav__item{% if isCurrent or isParent %} nav__item--active{% endif %}"
        >
                    <a
                class="nav__link"
                href="{% if isCurrent %}#main{% else %}{{
                    item.url | url
                }}{% endif %}"
                {%
                if
                isCurrent
                %}
                aria-current="page"
                {%
                endif
                %}
            >
                        {{ item.title }}
                    </a>
                </li>
            {%- endif -%}
        {%- endfor -%}
        <li>
            <button
                class="icon-button nav__themebtn modal-button"
                aria-expanded="false"
                aria-controls="theme-menu"
                data-umami-event="nav-theme"
            >
                <span class="sr-only"> Change Theme</span>

                {% icon "color-wheel" %}
            </button>
        </li>
    </ul>

</nav>