---
layout: base
eleventyNavigation:
    key: About
---

<main class="container about">
    <r-grid columns="12" columns-s="4">
        <r-cell
            class="border-left u-desktop-only"
            span="1-2"
            span-s="row"
        ></r-cell>
        <r-cell
            class="border-left-right about--header-empty u-desktop-only"
            span="3-12"
            span-s="row"
        >
        </r-cell>

        <r-cell
            class="border-left-bottom u-desktop-only"
            span="1-2"
            span-s="row"
        ></r-cell>
        <r-cell
            class="about--header-container border-left-right"
            span="3-12"
            span-s="row"
        >
            {% include "header.njk" %}
        </r-cell>

        <r-cell
            class="border-left-bottom about--title-intro"
            span="1-2"
            span-s="row"
        >
            <div class="border-bottom about--section-title">
                <p class="bold">Introduction</p>
            </div>
        </r-cell>
        <r-cell
            class="border-left-right-bottom introduction"
            span="3-12"
            span-s="row"
        >
            <span class="block border-bottom u-desktop-only"></span>
            {% include "home/introduction.njk" %}
        </r-cell>

        <r-cell class="border-left about--title-footer" span="1-2" span-s="row">
            <div class="border-bottom about--section-title">
                <p class="bold">Footer</p>
            </div>
        </r-cell>
        <r-cell class="border-left-right footer" span="3-12" span-s="row">
            <span class="block border-bottom u-desktop-only"></span>
            {% include "footer.njk" %}
        </r-cell>
    </r-grid>
</main>
