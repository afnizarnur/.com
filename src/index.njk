---
layout: base
eleventyNavigation:
    key: Work
---

<main class="container work">
    <r-grid columns="12" columns-s="4">
        <r-cell
            class="border-left u-desktop-only"
            span="1-2"
            span-s="row"
        ></r-cell>
        <r-cell
            class="border-left-right work--header-empty u-desktop-only"
            span="3-12"
            span-s="row"
            span-md="row"
        >
        </r-cell>

        <r-cell
            class="border-left-bottom u-desktop-only"
            span="1-2"
            span-s="row"
            span-md="row"
        ></r-cell>
        <r-cell
            class="work--header-container border-left-right"
            span="3-12"
            span-s="row"
            span-md="row"
        >
            {% include "header.njk" %}
        </r-cell>

        <r-cell
            class="border-left-bottom work--title-intro"
            span="1-2"
            span-s="row"
            span-md="row"
        >
            <div class="border-bottom work--section-title">
                <small>Introduction</small>
            </div>
        </r-cell>
        <r-cell
            class="border-left-right-bottom introduction"
            span="3-12"
            span-s="row"
            span-md="row"
        >
            <span class="block border-bottom u-desktop-only"></span>
            {% include "home/introduction.njk" %}
        </r-cell>

        <r-cell
            class="border-left work--title-footer"
            span="1-2"
            span-s="row"
            span-md="row"
        >
            <div class="border-bottom work--section-title">
                <small>Footer</small>
            </div>
        </r-cell>
        <r-cell
            class="border-left-right footer"
            span="3-12"
            span-s="row"
            span-md="row"
        >
            <span class="block border-bottom u-desktop-only"></span>
            {% include "footer.njk" %}
        </r-cell>
    </r-grid>
</main>
