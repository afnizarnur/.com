---
layout: base
pagination:
  data: collections.writingCategories
  size: 1
  alias: category
  filter:
    - writing
eleventyComputed:
  title: "{% set filteredWritings = collections.writing | filterByCategory(category) %}{{ filteredWritings | length | pluralize('post') }} tagged with {{ category }}"
permalink: /writing/categories/{{ category | slugify }}/
eleventyExcludeFromCollections: true
---

